@model Progra1BD.Models.ObjetiveAccount
    ViewData["Title"] = "Crear Ahorro";
}
<head>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Banco Verdun</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <div class="dropdown show">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Transacciones
                        </a>
          
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-area="" asp-controller="Transaction" asp-action="StateAccount">Estado de Cuenta</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Transaction" asp-action="Beneficiaries">Beneficiarios</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Transaction" asp-action="ObjetiveAccount">Cuenta Objetivo</a>
                        </div>
                    </div>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="About" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Login">Salir</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</head>
<div class="container">
    <br/>
    <br/>
    <div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Ingrese los siguientes datos</h3>
                    </div>
                    <div class="panel-body">
                        <fieldset>
                            <div class="form-group">
                                <i class="fas fa-money-bill-alt"></i> <a>Monto a Ahorrar</a><br> <input class="form-control" placeholder="Ingrese el Monto" name="montoAhorro" type="number" min="0" autofocus id="txtMontoAhorro" required>
                            </div>
                            <div class="form-group">
                                <i class="far fa-clock"></i>  <a>Periodo</a><br> <input class="form-control" placeholder="Ingrese el Periodo" name="periodoAhorro" type="number" min="3" max="12" autofocus id="txtperiodoAhorro" required>
                            </div>

                            <div class="form-group">
                                <i class="fas fa-calendar-week"></i>  <a>Fecha de rebajo</a>
                                 <br> <input class="form-control" name="date" type="date" min="01-09-2019"  max="31-12-2019 "id="date" required>
                            </div>
                            <div class="form-group">
                                <i class="fas fa-plane"></i> <a>Descripcion</a><br> <input class="form-control" placeholder="Motivo del ahorro" name="descripcion" type="text" id="description" required>
                            </div>
                            <div>
                                <button id="btnIngresar" class="btn btn-lg btn-success btn-block">Añadir</button>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->

                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
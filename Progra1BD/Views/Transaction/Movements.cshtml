    <br/>
    <br/>
    <br/>
    <h3>Movimientos</h3>
    <br/>
    
    <!-- /.row -->

    <table class="table table-bordered table-responsive" style="border: 0px; padding-left: 200px">
        <thead class="table-primary">
        <tr>
            <th>Identificacion</th>
            <th>Id del Estado de Cuenta</th>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Nuevo Saldo</th>
            <th>Descripcion</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idEstadoCuenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.monto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nuevoSaldo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
﻿
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Ingrese sus datos</h3>
                </div>
                <div class="panel-body">
                    <form asp-controller="Login" asp-action="Index">
                    <fieldset>
                        <div class="form-group">
                            <i class="fas fa-user"></i> <br> <input class="form-control" placeholder="Usuario" name="usuario" type="text" autofocus id="txtUsuario">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-lock"></i> <br> <input class="form-control" placeholder="Password" name="password" type="password" id="txtPassword">
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <button id="btnIngresar" type="submit" class="btn btn-lg btn-success btn-block">Ingresar</button>
                    </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

